# Application Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/nest-boilerplate

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Brevo (Email Service) Configuration
BREVO_API_KEY=your-brevo-api-key-here

# Brevo Template IDs (Create these templates in your Brevo dashboard)
BREVO_VERIFICATION_TEMPLATE_ID=1
BREVO_PASSWORD_RESET_TEMPLATE_ID=2

# Email Configuration
SENDER_EMAIL=noreply@yourdomain.com
FRONTEND_URL=http://localhost:3000
RESET_PASSWORD_URL=http://localhost:3000/reset-password
VERIFICATION_URL=http://localhost:3000/verify-email

# Team Management Configuration
MAX_TEAMS_PER_AGENCY=30

# Security Configuration
SALT_ROUNDS=10 