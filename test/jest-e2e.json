{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapping": {
    "^config/(.*)$": "<rootDir>/config/$1"
  },
  "moduleDirectories": ["node_modules", "src", "config"],
  "modulePaths": ["<rootDir>"]
}
